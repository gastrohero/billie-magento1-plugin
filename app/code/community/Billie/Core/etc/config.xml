<?xml version="1.0"?>
<config>
    <modules>
        <Billie_Core>
            <version>0.1.0</version>
        </Billie_Core>
    </modules>
    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <billie_legal_form>
                    <to_order_payment>*</to_order_payment>
                </billie_legal_form>
                <billie_industry_sector>
                    <to_order_payment>*</to_order_payment>
                </billie_industry_sector>
            </sales_convert_quote_payment>
        </fieldsets>
        <models>
            <billie_core>
                <class>Billie_Core_Model</class>
                <resourceModel>billie_core_resource</resourceModel>
            </billie_core>
            <billie_core_resource>
                <class>Billie_Core_Model_Resource</class>
            </billie_core_resource>
        </models>
        <blocks>
            <billie_core>
                <class>Billie_Core_Block</class>
            </billie_core>
        </blocks>
        <helpers>
            <billie_core>
                <class>Billie_Core_Helper</class>
            </billie_core>
        </helpers>
        <resources>
            <billie_core_setup>
                <setup>
                    <module>Billie_Core</module>
                </setup>
            </billie_core_setup>
        </resources>
    </global>
    <default>
        <payment>
            <payafterdelivery>
                <active>1</active>
                <model>billie_core/payment_payafterdelivery</model>
                <order_status>pending</order_status>
                <title>PayAfterDelivery</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </payafterdelivery>
        </payment>
    </default>
</config>