<?xml version="1.0"?>
<config>
    <modules>
        <Billie_Core>
            <version>0.1.1</version>
        </Billie_Core>
    </modules>
    <global>
        <fieldsets>
            <sales_convert_quote_payment>
                <billie_legal_form>
                    <to_order_payment>*</to_order_payment>
                </billie_legal_form>
                <billie_industry_sector>
                    <to_order_payment>*</to_order_payment>
                </billie_industry_sector>
            </sales_convert_quote_payment>
        </fieldsets>
        <models>
            <billie_core>
                <class>Billie_Core_Model</class>
                <resourceModel>billie_core_resource</resourceModel>
            </billie_core>
            <billie_core_resource>
                <class>Billie_Core_Model_Resource</class>
            </billie_core_resource>
        </models>
        <blocks>
            <billie_core>
                <class>Billie_Core_Block</class>
            </billie_core>
        </blocks>
        <helpers>
            <billie_core>
                <class>Billie_Core_Helper</class>
            </billie_core>
        </helpers>
        <resources>
            <billie_core_setup>
                <setup>
                    <module>Billie_Core</module>
                </setup>
            </billie_core_setup>
        </resources>
        <events>
            <resource_get_tablename>
                <observers>
                    <billie_core>
                        <class>billie_core/observer</class>
                        <method>addAutoloader</method>
                    </billie_core>
                </observers>
            </resource_get_tablename>
            <sales_order_place_before>
                <observers>
                    <billie_createorder>
                        <type>singleton</type>
                        <class>Billie_Core_Model_Sales_Observer</class>
                        <method>createOrder</method>
                    </billie_createorder>
                </observers>
            </sales_order_place_before>
            <sales_order_shipment_save_after>
                <observers>
                    <billie_shiporder>
                        <type>singleton</type>
                        <class>Billie_Core_Model_Sales_Observer</class>
                        <method>shipOrder</method>
                    </billie_shiporder>
                </observers>
            </sales_order_shipment_save_after>
            <order_cancel_after>
                <observers>
                    <billie_cancelorder>
                        <type>singleton</type>
                        <class>Billie_Core_Model_Sales_Observer</class>
                        <method>cancelOrder</method>
                    </billie_cancelorder>
                </observers>
            </order_cancel_after>
        </events>
    </global>
    <default>
        <payment>
            <payafterdelivery>
                <active>1</active>
                <model>billie_core/payment_payafterdelivery</model>
                <order_status>pending</order_status>
                <title>PayAfterDelivery</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
            </payafterdelivery>
        </payment>
    </default>
    <frontend>
        <routers>
            <index>
                <use/>
                <args>
                    <frontName>billie</frontName>
                    <module>Billie_Core_Payment</module>
                </args>
            </index>
        </routers>
    </frontend>
</config>